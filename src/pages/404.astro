---
import Main from "@/layouts/main.astro";
---

<Main title="404" description="Oops! Halaman yang Anda cari tidak tersedia.">
  <section class="mx-auto mt-20 min-h-[50svh] flex flex-col justify-center text-center cursor-default">
    <h1 class="text-4xl font-bold">404 | Halaman Tidak Ditemukan</h1>
    <p class="mt-2">
      Sepertinya Anda tersesat, mari kembali ke
      <a
        href="/"
        class="underline text-slate-900 transition-all duration-300 ease-in-out lg:hover:text-slate-600"
      >
        beranda
      </a>
      <sup>
        <i class="fa fa-external-link-square" />
      </sup>
    </p>
  </section>
</Main>